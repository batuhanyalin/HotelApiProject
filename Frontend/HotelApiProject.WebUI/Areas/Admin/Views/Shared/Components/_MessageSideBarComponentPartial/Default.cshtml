<div class="mail-list mt-4">
    <a href="/Admin/Contact/Index" class="list-group-item border-0 text-primary p-r-0">
        <i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen</b>
        <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.inboxCount</span>
    </a>

    <a href="/Admin/Contact/SentMessageList" class="list-group-item text-success border-0 p-r-0">
        <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Gönderilen
        <span class="badge badge-success badge-sm float-right m-t-5">@ViewBag.sentboxCount</span>
    </a>

    <a href="#" class="list-group-item border-0 p-r-0 text-danger">
        <i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemliler
        <span class="badge badge-danger badge-sm float-right m-t-5">16</span>
    </a>

    <a href="#" class="list-group-item border-0 p-r-0 text-warning">
        <i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslak
        <span class="badge badge-warning badge-sm float-right m-t-5">12</span>
    </a>

    <a href="#" class="list-group-item border-0 p-r-0 text-dark">
        <i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu
        <span class="badge badge-dark badge-sm float-right m-t-5">36</span>
    </a>
</div>