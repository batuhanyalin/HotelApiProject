@model InstagramFollowersDto
<div class="col-lg-3 col-sm-6">
    <div class="card">
        <div class="social-graph-wrapper widget-googleplus" style="background-color:rgb(221, 42, 123)">
            <span class="s-icon"><i class="fa fa-instagram"></i></span>
        </div>
        <div class="row">
            <div class="col-6 border-right">
                <div class="pt-3 pb-3 pl-0 pr-0 text-center">
                    <h4 class="m-1">@Model.followers</h4>
                    <p class="m-0">Takipçi</p>
                </div>
            </div>
            <div class="col-6">
                <div class="pt-3 pb-3 pl-0 pr-0 text-center">
                    <h4 class="m-1">@Model.following</h4>
                    <p class="m-0">Takip Edilen</p>
                </div>
            </div>
        </div>
    </div>
</div>