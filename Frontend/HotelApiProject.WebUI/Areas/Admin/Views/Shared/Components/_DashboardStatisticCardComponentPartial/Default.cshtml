
<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Personel Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.staffCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-users"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Rezervasyon Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.reservationCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"> <i class="fas fa-vote-yea"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Misafir Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.guestCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-street-view"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Oda Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.roomCount</h2>
                    <p class="text-white mb-0">Yükleniyor...</p>
                </div>
                <span class="float-right display-5 opacity-5"> <i class="fas fa-person-booth"></i></span>
            </div>
        </div>
    </div>
</div>