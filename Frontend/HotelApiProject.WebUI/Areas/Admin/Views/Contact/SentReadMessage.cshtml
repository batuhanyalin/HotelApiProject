@model SendMessageListDto
@{
    ViewData["Title"] = "SentReadMessage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Contact/SentMessageList">Gönderilen Mesajlar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Mesaj Detay</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="/Admin/Contact/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                        @await Component.InvokeAsync("_MessageSideBarComponentPartial")
                        @await Component.InvokeAsync("_MessageSideBarCategoryComponentPartial")
                    </div>
                    <div class="email-right-box">
                        <div class="toolbar" role="toolbar">
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-archive"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-exclamation-circle"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Taşı</span>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>  <a class="dropdown-item" href="javascript: void(0);">Güncelleme</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Kategoriler:</span>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    Daha Fazla <span class="caret m-l-5"></span>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Seçenekler :</span>  <a class="dropdown-item" href="javascript: void(0);">Mark as Unread</a>  <a class="dropdown-item" href="javascript: void(0);">Add to Tasks</a>  <a class="dropdown-item" href="javascript: void(0);">Add Star</a>  <a class="dropdown-item" href="javascript: void(0);">Mute</a>
                                </div>
                            </div>
                        </div>
                        <div class="read-content">
                            <div class="media pt-5">
                                <div class="media-body">

                                    <h5 class="m-b-3">Alıcı: @Model.ReceiverName @Model.ReceiverSurname</h5>
                                    <p class="m-b-2">@Model.SendingDate.ToString("dd MMM yyy")</p>
                                </div>

                            </div>
                            <hr>
                            <div class="media mb-4 mt-1">
                                <div class="media-body">
                                    <span class="float-right">@Model.SendingDate.ToString("HH:ss")</span>
                                    <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Gönderen:@Model.SenderMail</small>
                                </div>
                            </div>
                            <div>
                                @Model.Content
                            </div>
                            <hr>
                        </div>
                        <div class="text-right">
                            <a href="/Admin/Contact/SentMessageList" class="btn btn-primaryw-md m-b-30" type="button">Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
