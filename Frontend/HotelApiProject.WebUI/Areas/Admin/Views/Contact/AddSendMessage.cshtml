@model SendMessageAddDto
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Contact/Index">Mesajlar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Yeni Mesaj Oluştur</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="/Admin/Contact/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                        @await Component.InvokeAsync("_MessageSideBarComponentPartial")
                        @await Component.InvokeAsync("_MessageSideBarCategoryComponentPartial")
                    </div>
                    <form method="post">
                        <div class="email-right-box">
                            <div class="toolbar" role="toolbar">
                                <div class="btn-group m-b-20">
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-archive"></i>
                                    </button>
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-exclamation-circle"></i>
                                    </button>
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                                <div class="btn-group m-b-20">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                                    </button>
                                    <div class="dropdown-menu">
                                        <span class="dropdown-header">Taşı</span>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>  <a class="dropdown-item" href="javascript: void(0);">Güncelleme</a>
                                        <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                    </div>
                                </div>
                                <div class="btn-group m-b-20">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                                    </button>
                                    <div class="dropdown-menu">
                                        <span class="dropdown-header">Kategoriler:</span>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>
                                        <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                    </div>
                                </div>
                                <div class="btn-group m-b-20">
                                    <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                        Daha Fazla <span class="caret m-l-5"></span>
                                    </button>
                                    <div class="dropdown-menu">
                                        <span class="dropdown-header">Seçenekler :</span>  <a class="dropdown-item" href="javascript: void(0);">Mark as Unread</a>  <a class="dropdown-item" href="javascript: void(0);">Add to Tasks</a>  <a class="dropdown-item"
                                                                                                                                                                                                                                              href="javascript: void(0);">Add Star</a>  <a class="dropdown-item" href="javascript: void(0);">Mute</a>
                                    </div>
                                </div>
                            </div>
                            <div class="compose-content mt-5">
                                <input type="hidden" asp-for="SendingDate" value="@DateTime.Now" />
                                <input type="hidden" asp-for="SenderName" value="HotelApi" />
                                <input type="hidden" asp-for="SenderSurname" value="Admin" />
                                <input type="hidden" asp-for="SenderMail" value="hotelapi@batuhanyalin.com.tr" />
                                <div class="row form-group">
                                    <div class="form-group col">
                                        <input type="text" class="form-control bg-transparent" asp-for=ReceiverName placeholder=" Alıcı Adı">
                                        <span class="text-danger" asp-validation-for=ReceiverName></span>
                                    </div>
                                    <div class="form-group col">
                                        <input type="text" class="form-control bg-transparent" asp-for=ReceiverSurname placeholder=" Alıcı Soyad">
                                        <span class="text-danger" asp-validation-for=ReceiverSurname></span>
                                    </div>
                                    <div class="form-group col">
                                        <input type="email" class="form-control bg-transparent" asp-for=ReceiverMail placeholder=" Alıcı E-posta">
                                        <span class="text-danger" asp-validation-for=ReceiverMail></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for=Subject placeholder=" Konu">
                                    <span class="text-danger" asp-validation-for=Subject></span>
                                </div>
                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-light" asp-for=Content rows="15" placeholder="İçerik ..."></textarea>
                                    <span class="text-danger" asp-validation-for=Content></span>
                                </div>

                            </div>
                            <div class="text-left m-t-15">
                                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

