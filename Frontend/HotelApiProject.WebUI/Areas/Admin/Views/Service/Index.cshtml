@model List<ServiceListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard/Index">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Hizmetler</a></li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <h4 class="card-title">
                                Hizmet Listesi
                            </h4>
                        </div>
                        <div class="col-lg-2">
                            <a href="/Service/AddService" class="btn mb-1 btn-primary">
                                Yeni Hizmet  <span class="btn-icon-right"><i class="fas fa-user-plus"></i></span>
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped verticle-middle">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Aksiyon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td><i class="@item.ServiceIconUrl"></i></td>
                                        <td>@item.Title</td>
                                        <td>
                                            @{
                                                if (item.Description?.Length > 50)
                                                {
                                                    @item.Description.Substring(0, 50)
                                                    ;
                                                }
                                                else
                                                {
                                                    @item.Description?.ToString()
                                                    ;
                                                }
                                            }
                                        </td>
                                        <td>
                                            <span><a href="/Service/UpdateService/@item.ServiceId" data-toggle="tooltip" data-placement="top" title="Güncelle"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="/Service/DeleteService/@item.ServiceId" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-close color-danger"></i></a></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
