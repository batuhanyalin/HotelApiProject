@model ServiceUpdateDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Service/Index">Hizmetler</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Yeni Hizmet Ekle</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmet Bilgileri</h4>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-row">
                                <input type="hidden" asp-for="ServiceId" />
                                <div style="text-align:center;align-content:center" class="form-group col col-1">  
                                    <br />
                                    <i style="font-size:large" class="@Model.ServiceIconUrl"></i>
                                </div>
                                <div class="form-group col">
                                    <label>Ikon Link</label>
                                    <input type="text" class="form-control" asp-for="ServiceIconUrl" />
                                    <span class="text-danger" asp-validation-for=ServiceIconUrl></span>
                                </div>
                                <div class="form-group col">
                                    <label>Başlık</label>
                                    <input type="text" class="form-control" asp-for="Title" />
                                    <span class="text-danger" asp-validation-for=Title></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>Açıklama</label>
                                    <textarea style="height:120px" class="form-control" asp-for="Description"></textarea>
                                    <span class="text-danger" asp-validation-for=Description></span>
                                </div>
                            </div>
                            <button class="btn mb-1 btn-success">
                                Kaydet <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
