@model AboutUpdateDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Service/Index">Hakkında</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Hakkında Güncelle</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkında Bilgileri</h4>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-row">
                                <div class="form-group col">
                                    <input type="hidden" asp-for="AboutId" />
                                    <label>Başlık 1</label>
                                    <input type="text" class="form-control" asp-for="Title1" />
                                    <span class="text-danger" asp-validation-for=Title1></span>
                                </div>
                                <div class="form-group col">
                                    <label>Başlık 2</label>
                                    <input type="text" class="form-control" asp-for="Title2" />
                                    <span class="text-danger" asp-validation-for=Title2></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>Misafir Sayısı</label>
                                    <input type="text" class="form-control" asp-for="ClientCount" />
                                    <span class="text-danger" asp-validation-for=ClientCount></span>
                                </div>
                                <div class="form-group col">
                                    <label>Oda Sayısı</label>
                                    <input type="text" class="form-control" asp-for="RoomCount" />
                                    <span class="text-danger" asp-validation-for=RoomCount></span>
                                </div>
                                <div class="form-group col">
                                    <label>Personel Sayısı</label>
                                    <input type="text" class="form-control" asp-for="StaffCount" />
                                    <span class="text-danger" asp-validation-for=StaffCount></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>Açıklama</label>
                                    <textarea style="height:120px" class="form-control" asp-for="Text"></textarea>
                                    <span class="text-danger" asp-validation-for=Text></span>
                                </div>
                            </div>
                            <button class="btn mb-1 btn-success">
                                Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

