@model CommentUpdateDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Comment/Index">Yorumlar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Yorum Güncelle</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yorum Bilgileri</h4>
                    <div class="basic-form">
                        <form enctype="multipart/form-data" method="post">
                            <div class="form-row">
                                <div class="form-group col">
                                    <input type="hidden" asp-for="CommentId" />
                                    <input type="hidden" asp-for="CommentDate" />
                                    <label>Yorum Yapan</label>
                                    @Html.DropDownListFor(x => x.UserId,(List<SelectListItem>)ViewBag.userList, new { @class = "form-control" })
                                </div>
                                <div class="form-group col">
                                    <label>Oda</label>
                                    @Html.DropDownListFor(x => x.RoomId, (List<SelectListItem>)ViewBag.roomList, new { @class = "form-control" }) 
                                </div>
                                <div style="text-align:center;align-content:center;align-content:center;float:inherit" class="form-group col">
                                    <input asp-for="IsApproved" type="checkbox" class="form-check-input" />
                                    <input type="hidden" asp-for="IsApproved" value="false" />
                                    <label>Onaylandı <i class="fas fa-check-circle"></i></label>
                                </div>
                            </div>
                            <div class="form-row">
                                <textarea class="form-control" asp-for="Text"></textarea>
                            </div>
                            <button class="btn mb-1 btn-success">
                                Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

