@model UpdateTestimonialViewModel
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Testimonial/Index">Referanslar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Referans Güncelleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Referans Bilgileri</h4>
                    <div class="basic-form">
                        <form enctype="multipart/form-data" method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <div class="row">
                                <div class="form-group col col-md-3">
                                    <div class="row">
                                        <div class="col">
                                            <label>Mevcut Görsel</label>
                                            <br />
                                            <img src="@Model.ImageUrl" style="border-radius:5" height="220px" width="170px" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label>Fotoğrafı Değiştir</label>
                                            <br />
                                            <div class="btn btn-secondary">
                                                <span><i class="fa fa-upload color-success"></i>   <input style="width:170px;font-size:smaller" type="file" name="Image" /></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col col-md-4">
                                    <div class="row">
                                        <div class="col">
                                            <label>Adı</label>
                                            <input type="text" class="form-control" asp-for="Name" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label>Soyadı</label>
                                            <input type="text" class="form-control" asp-for="Surname" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label>Ünvan</label>
                                            <input type="text" class="form-control" asp-for="Title" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col col-md-3">
                                    <div class="row">
                                        <div class="col">
                                            <label>Açıklama</label>
                                            <textarea style="height:200px" class="form-control" asp-for="Description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col col-md-2">
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-label">Referans Onay Durumu </label>
                                            <br />
                                            <input asp-for="IsApproved" type="checkbox" class="form-check-input" />
                                            <input type="hidden" asp-for="IsApproved" value="false" />
                                            <span style="font-size:x-small;color:darkslategray">(onay için işaretleyin)</span>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn mb-1 btn-outline-success">
                                    Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

