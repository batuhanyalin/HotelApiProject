@model UserUpdateDto
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/User/Index">Kullanıcılar</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Kullanıcı Güncelle</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kullanıcı Bilgileri</h4>
                    <div class="basic-form">
                        <form enctype="multipart/form-data" method="post">
                            <div class="form-row">
                                <div class="col-md-2">
                                    <div class="row">
                                        <div class="col">
                                            <label>Mevcut Görsel</label>
                                            <br />
                                            <img height="100px" src="@Model.ImageUrl" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label>Fotoğraf Yükle</label>
                                            <br />
                                            <div class="text-primary">
                                                <span><i class="fa fa-upload color-success"></i>   <input type="file" name="Image" /></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="row">
                                        <div class="form-group col">
                                            <label>Adı</label>
                                            <input type="text" class="form-control" asp-for="Name" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Soyadı</label>
                                            <input type="text" class="form-control" asp-for="Surname" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Meslek</label>
                                            <input type="text" class="form-control" asp-for="Profession" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Şehir</label>
                                            <input type="text" class="form-control" asp-for="City" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Şube Seçin</label>
                                            @Html.DropDownListFor(x => x.WorkLocationId, (List<SelectListItem>)ViewBag.workLocation, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col">
                                            <label>Cinsiyet</label>
                                            <br />
                                            <div class="row">
                                                <!-- Erkek Radyo Butonu -->
                                                <div class="col">
                                                    <input asp-for="Gender" type="radio" class="form-check-input" value="true" id="male" />
                                                    <label for="male">
                                                        <i style="color:cornflowerblue;font-size:xx-large" class="fas fa-mars"></i> Erkek
                                                    </label>
                                                </div>
                                                <!-- Kadın Radyo Butonu -->
                                                <div class="col">
                                                    <input asp-for="Gender" type="radio" class="form-check-input" value="false" id="female" />
                                                    <label for="female">
                                                        <i style="color:orchid;font-size:xx-large" class="fas fa-venus"></i> Kadın
                                                    </label>
                                                </div>
                                                <span asp-validation-for="Gender"></span>
                                            </div>
                                        </div>


                                        <div class="form-group col">
                                            <label>E-posta</label>
                                            <input type="email" class="form-control" asp-for="Email" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Telefon</label>
                                            <input type="text" class="form-control" asp-for="PhoneNumber" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Kullanıcı Adı</label>
                                            <input type="text" class="form-control" asp-for="UserName" />
                                        </div>
                                        <div class="form-group col">
                                            <label>Parola</label>
                                            <input type="text" class="form-control" asp-for="Password" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Hakkında</label>
                                    <textarea style="height:120px" class="form-control" asp-for="About"></textarea>
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="col">
                                        <label>Instagram</label>
                                        <input type="text" class="form-control" placeholder="Yalnızca kullanıcı adını girin." asp-for="InstagramUrl" />

                                    </div>
                                    <div class="col">
                                        <label>Twitter</label>
                                        <input type="text" class="form-control" placeholder="Yalnızca kullanıcı adını girin." asp-for="TwitterUrl" />
                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <div class="col">
                                        <label>Kullanıcı Rolü</label>
                                        @Html.DropDownListFor(x => x.UserRole.Id, (List<SelectListItem>)ViewBag.roleList,new { @class = "form-control" })
                                    </div>
                                    <div class="col">
                                        <label>Doğum Tarihi</label>
                                        <input type="date" class="form-control" asp-for="Birtday" />
                                    </div>
                                </div>
                            </div>
                            <button class="btn mb-1 btn-success">
                                Güncelle <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

