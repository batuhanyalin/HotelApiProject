@model List<MessageCategoryListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Dashboard/Index">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Mesaj Kategorileri</a></li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <h4 class="card-title">
                                Mesaj Kategori Listesi
                            </h4>
                        </div>
                        <div class="col-lg-2">
                            <a href="/Admin/MessageCategory/AddMessageCategory" class="btn mb-1 btn-primary">
                                Yeni Mesaj Kategori  <span class="btn-icon-right"><i class="fas fa-stream"> +</i></span>
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped verticle-middle">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Aksiyon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <th><i class="@item.IconUrl"></i></th>
                                        <td>@item.MessageCategoryName</td>
                                        <td>
                                            <span><a href="/Admin/MessageCategory/UpdateMessageCategory/@item.MessageCategoryId" data-toggle="tooltip" data-placement="top" title="Güncelle"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="/Admin/MessageCategory/DeleteMessageCategory/@item.MessageCategoryId" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-close color-danger"></i></a></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>