@model RoomListDto
<div id="room-carousel" class="carousel slide mb-5 wow fadeIn" data-bs-ride="carousel" data-wow-delay="0.1s">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="w-100" src="@Model.CoverImageUrl" alt="Image">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#room-carousel"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#room-carousel"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

<div class="d-flex align-items-center mb-4">
    <h1 class="mb-0">@Model.Title</h1>
    <div class="ps-3">
        <small class="fa fa-star text-primary"></small>
        <small class="fa fa-star text-primary"></small>
        <small class="fa fa-star text-primary"></small>
        <small class="fa fa-star text-primary"></small>
        <small class="fa fa-star text-primary"></small>
    </div>
</div>

<div class="d-flex flex-wrap pb-4 m-n1">
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-bed text-primary me-2"></i>@Model.BedCount Yatak</small>
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-bath text-primary me-2"></i>@Model.BathCount Banyo</small>
    <small class="bg-light rounded py-1 px-3 m-1">
        @{
            if (Model.Wifi == true)
            {
                <i class="fa fa-wifi text-success me-2"></i>
            }
            else
            {
                <i class="fa fa-wifi text-danger me-2"></i>
            }
        }
        Wifi
    </small>
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-tv text-primary me-2"></i>TV</small>
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-fan text-primary me-2"></i>Klima</small>
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-user-cog text-primary me-2"></i>Çamaşır</small>
    <small class="bg-light rounded py-1 px-3 m-1"><i class="fa fa-utensils text-primary me-2"></i>Akşam Yemeği</small>
</div>
<p class="mb-5">
    @Model.Description
</p>

<div class="tab-class wow fadeInUp" data-wow-delay="0.1s">
    <ul class="nav nav-pills d-flex justify-content-between border-bottom mb-4">
        <li class="nav-item">
            <a class="d-flex align-items-center py-3 active" data-bs-toggle="pill" href="#tab-1">
                <i class="fa fa-eye text-primary me-2"></i>
                <h6 class="mb-0">Açıklama</h6>
            </a>
        </li>
        <li class="nav-item">
            <a class="d-flex align-items-center py-3" data-bs-toggle="pill" href="#tab-2">
                <i class="fas fa-lira-sign text-primary me-2"></i>
                <h6 class="mb-0">Fiyat Bilgisi</h6>
            </a>
        </li>
        <li class="nav-item">
            <a class="d-flex align-items-center py-3" data-bs-toggle="pill" href="#tab-3">
                <i class="fa fa-map-marker-alt text-primary me-2"></i>
                <h6 class="mb-0">Lokasyon</h6>
            </a>
        </li>
        <li class="nav-item">
            <a class="d-flex align-items-center py-3" data-bs-toggle="pill" href="#tab-4">
                <i class="fa fa-star text-primary me-2"></i>
                <h6 class="mb-0">Yorumlar</h6>
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="tab-1" class="tab-pane fade show p-0 active">
            <p>
                @Model.Description
            </p>
        </div>
        <div id="tab-2" class="tab-pane fade show p-0">
            <p>
                Oda fiyatları genel amaçlı bilgilendirme için girilmiştir. Olası fiyat değişiklikleri için iletişim kurunuz.
            </p>
            <div class="row g-4">
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Gecelik:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    <span>@Model.Price ₺</span>
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Haftalık:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    @{
                        int fiyat = 0;
                        fiyat = (Model.Price * 7);
                        <span>
                            @fiyat ₺
                        </span>
                    }
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Aylık:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    @{
                        int fiyat2 = 0;
                        fiyat2 = (Model.Price * 30);
                        <span>
                            @fiyat2 ₺
                        </span>
                    }
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Hafta Sonu:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    @{
                        double fiyat3 = 0;
                        fiyat3 = (Convert.ToDouble((Model.Price * 2)) * (1.20));
                        <span>
                            @fiyat3 ₺
                        </span>
                    }
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Ek Misafir:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    @{
                        double fiyat4 = 0;
                        fiyat4 = (Convert.ToDouble((Model.Price * 2)) * (0.30));
                        <span>
                            @fiyat4 ₺
                        </span>
                    }
                </div>
                <div class="col-sm-6 d-flex align-items-center justify-content-between">
                    <span>Güvenlik Depozitosu:</span>
                    <hr class="flex-grow-1 my-0 mx-3">
                    @{
                        double fiyat5 = 0;
                        fiyat5 = (Convert.ToDouble((Model.Price * 2)) * (0.20));
                        <span>
                            @fiyat5 ₺
                        </span>
                    }
                </div>
            </div>
        </div>
        <div id="tab-3" class="tab-pane fade show p-0">
            <div class="row g-4 mb-4">
                <div class="col-md-4 d-flex align-items-center">
                    <div class="flex-shrink-0 border rounded p-1 me-3" style="width: 45px; height: 45px;">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-map-marker-alt text-primary"></i>
                        </div>
                    </div>
                    <span> Kundu Mah. No: 450, 07112 Aksu/Antalya</span>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <div class="flex-shrink-0 border rounded p-1 me-3" style="width: 45px; height: 45px;">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-phone-alt text-primary"></i>
                        </div>
                    </div>
                    <span>+090 345 67890</span>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <div class="flex-shrink-0 border rounded p-1 me-3" style="width: 45px; height: 45px;">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-envelope text-primary"></i>
                        </div>
                    </div>
                    <span><a href="mailto:hotelapi@batuhanyalinsoftware.com.tr" class="__cf_email__">hotelapi@batuhanyalinsoftware.com.tr</a></span>
                </div>
            </div>
            <iframe class="position-relative rounded w-100 h-100"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                    frameborder="0" style="min-height: 350px; border:0;" allowfullscreen=""
                    aria-hidden="false" tabindex="0"></iframe>
        </div>
