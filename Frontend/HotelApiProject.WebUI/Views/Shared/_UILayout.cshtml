@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body>

    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        @await Component.InvokeAsync("_UILayoutSpinnerComponentPartial")
        <!-- Spinner End -->
        <!-- Header Start -->
        @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
        <!-- Header End -->
        <!-- Carousel Start -->
        <!-- Carousel End -->
        <!-- Booking Start -->  
        <!-- Booking End -->
        @RenderBody()
        <!-- Newsletter Start -->
        <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="row justify-content-center">
                <div class="col-lg-10 border rounded p-1">
                    <div class="border rounded text-center p-1">
                        <div class="bg-white rounded text-center p-5">
                            <h4 class="mb-4">E-posta bültenimize <span class="text-primary text-uppercase">Kayıt Olun</span></h4>
                            <div class="position-relative mx-auto" style="max-width: 400px;">
                                <input class="form-control w-100 py-3 ps-4 pe-5" type="email" placeholder="E-posta adresinizi girin">

                                <button type="submit" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Kayıt Ol</button>
                                <span style="color:dimgray;font-size:smaller">(Spam içerik gönderilmeyecektir)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Newsletter Start -->
        <!-- Footer Start -->
        @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
        <!-- Footer End -->
        <!-- Back to Top -->
        @await Component.InvokeAsync("_UILayoutBackToTopComponentPartial")
    </div>
    <!-- JavaScript Libraries -->
    @await Component.InvokeAsync("_UILayoutScriptsComponentPartial")
</body>

</html>