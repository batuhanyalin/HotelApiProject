<!-- Booking Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Rezervasyon</h6>
            <h1 class="mb-5">Hemen <span class="text-primary text-uppercase">Rezervasyon Yap</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel-html-template/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hotel-html-template/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel-html-template/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hotel-html-template/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for=Name placeholder="Ad">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                    <label>Ad</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for=Surname placeholder="Soyad">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                    <label>Soyad</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for=Email placeholder="E-posta">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                    <label>E-posta</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for=Phone placeholder="Telefon">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                    <label>Telefon</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date3" data-target-input="nearest">
                                    <input type="date" class="form-control datetimepicker-input" id="checkin" asp-for=CheckIn placeholder="Check In" data-target="#date3" data-toggle="datetimepicker" />
                                    <span class="text-danger" asp-validation-for="CheckIn"></span>
                                    <label for="checkin">Check In</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date4" data-target-input="nearest">
                                    <input type="date" class="form-control datetimepicker-input" id="checkout" asp-for=CheckOut placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                                    <span class="text-danger" asp-validation-for="CheckOut"></span>
                                    <label for="checkout">Check Out</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for=AdultCount id="select1">
                                        <option value="1">1 Yetişkin</option>
                                        <option value="2">2 Yetişkin</option>
                                        <option value="3">3 Yetişkin</option>
                                        <option value="4">4 Yetişkin</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="AdultCount"></span>
                                    <label for="select1">Yetişkin Sayısı</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for=ChildCount id="select2">
                                        <option value="0">Çocuk Yok</option>
                                        <option value="1">1 Çocuk</option>
                                        <option value="2">2 Çocuk</option>
                                        <option value="3">3 Çocuk</option>
                                        <option value="4">4 Çocuk</option>
                                        <option value="5">5 Çocuk</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="ChildCount"></span>
                                    <label for="select2">Çocuk Sayısı</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select" asp-for=RoomCount id="select3">
                                        <option value="1">1 Odalı</option>
                                        <option value="2">2 Odalı</option>
                                        <option value="3">3 Odalı</option>
                                        <option value="4">4 Odalı</option>
                                        <option value="5">5 Odalı</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="RoomCount"></span>
                                    <label for="select3">Oda Seçimi</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Mesajınız" asp-for=Request style="height: 100px"></textarea>
                                    <span class="text-danger" asp-validation-for="Request"></span>
                                    <label>Mesajınız</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
